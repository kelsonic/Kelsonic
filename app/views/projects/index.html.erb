<div class="container">
  <div class="section">

    <!--   Icon Section   -->
    <div class="row">
      <div class="col s12">
        <div class="icon-block">
          
          <!--Header portfolio-->
          <div class="center">
            <h2 class="orange-text text-darken-2">
              My <span class="light-blue-text"><%= params[:project_type] if params[:project_type] %></span> Projects
            </h2>
            <p class="grey-text">
              I created the following projects by consulting countless online references,
              online bootcamps, actual bootcamps, and many books.
            </p>
            
            <% if params[:project_type] %>
              <%= link_to "View All Projects", projects_path, class: "orange-text text-darken-2" %>
              <br /><br />
            <% end %>

            <%= link_to "JavaScript", projects_path(project_type: 'JavaScript') %>
            | <%= link_to "Ruby on Rails", projects_path(project_type: 'Ruby on Rails') %>
            | <%= link_to "Unity3D Games", projects_path(project_type: 'Unity3D') %>

          </div>
          
          <!-- Projects -->
          <% @projects.each do |project| %>
            <hr/>
            <br/>
            <%= render 'project', project: project %>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>