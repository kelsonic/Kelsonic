<meta name="description" content="Kelsonic is a Ruby on Rails full-stack developer. 
Check out Kelsonic's Rails projects, Unity games, or the blog.">

<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container black-bg col s12 m8 offset-m2 l4 offset-l4">
      <h1 class="header center light-blue-text text-lighten-2 kelsonic">Kelson Adams</h1>
      <div class="row center">
        <h5 class="header white-text">Full-Stack Web Developer</h5>
      </div>
      <div class="row center">
        <%= link_to "Portfolio", rails_path, id: "download-button", class: "btn-large waves-effect waves-light orange lighten-1" %>
      </div>
    </div>
  </div>
  <div class="parallax"><%= image_tag("home.jpg", alt: "Placeholder image", class: "responsive-img") %></div>
</div>

<div class="divider light-blue"></div>

<div class="row center">
  <div class="col s12">
    <h3 class="light-blue-text text-darken-4">Top Competencies</h3>
  </div>
</div>

<!--Skills Card-->
<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card orange">
      <div class="card-content white-text">
        <table class="highlight centered">
          <thead>
            <tr>
              <th>Skill</th>
              <th>Used in # of Projects</th>
            </tr>
          </thead>
  
          <tbody>
            <% @top_skills.each do |skill| %>
              <tr>
                <td><%= skill.skill %></td>
                <td><%= skill.num_of_projects %><%= "+" if skill.num_of_projects.to_i >= 10 %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row center">
  <div class="col s12">
    <h3 class="blue-text text-darken-4">Want to see all of my competencies?</h3>
    <br/>
    <%= link_to "Yes, take me there", about_path, class: "btn btn-large light-blue waves-effect waves-orange" %>
  </div>
</div>
